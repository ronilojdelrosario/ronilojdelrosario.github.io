---
const { width = "100%", height = "", options = {} } = Astro.props;

// Generate a unique ID for this chart instance
const chartId = `echart-${Math.random().toString(36).substring(2, 11)}`;

// Default chart options if none provided
const defaultOptions = {
  title: {
    text: "ECharts Example"
  },
  tooltip: {},
  xAxis: {
    data: ["A", "B", "C", "D", "E"]
  },
  yAxis: {},
  series: [
    {
      name: "Sales",
      type: "bar",
      data: [5, 20, 36, 10, 10]
    }
  ]
};

const height_fin = height==""?'auto':height;
const aspect_ratio = height==""?'1 / 1':'auto'

// Merge provided options with defaults
const chartOptions = Object.keys(options).length > 0 ? options : defaultOptions;
const serializedOptions = JSON.stringify(chartOptions);
---

<div id={chartId}></div>

<script define:vars={{ chartOptions: serializedOptions, chartId }}>
  // Load ECharts from CDN
  document.addEventListener("DOMContentLoaded", async () => {
    // Load ECharts core
    const echarts = await import("https://cdnjs.cloudflare.com/ajax/libs/echarts/6.0.0/echarts.esm.min.js");

    // Initialize chart
    const chartContainer = document.getElementById(chartId);
    const chart = echarts.init(chartContainer);

    // Set chart options
    var options = JSON.parse(chartOptions);
    if (window.innerWidth<=768){
      let indexSize = options["visualMap"].findIndex((element)=>element.type=='continuous');
      if (indexSize != -1){
        let symbolSize = options.visualMap[indexSize].inRange.symbolSize;
        options.visualMap[indexSize].inRange.symbolSize = [8,symbolSize[1]*8/symbolSize[0]];
      }
      let indexSizePW = options["visualMap"].findIndex((element)=>element.type=='continuous')
    }
    if (options.tooltip.indices!=null){
      const tooltipInds = options.tooltip.indices;
      console.log(tooltipInds);
      console.log(tooltipInds.map((x)=>`${options.dataset.dimensions[x]}`).join("<br/>"));
      options.tooltip.formatter = params =>{
        return `${params.marker}<br/>`+tooltipInds.map((x)=>`<b>${params.dimensionNames[x]}</b>: ${params.value[x]}`).join("<br/>")
      };
    }
    options.tooltip.extraCssText = 'text-wrap: wrap;'
    chart.setOption(options);

    // Handle resize
    window.addEventListener("resize", () => {
      chart.resize();
    });
  });
</script>

<style define:vars={{width, height_fin, aspect_ratio}}>
  div {
    width: width;
    height: var(--height_fin);
    aspect-ratio: var(--aspect_ratio);
  }
  @media screen and (max-width: 768px) {
    div {
      height: auto;
      aspect-ratio: 1 / 1;
      overflow: hidden;
    }
  }
</style>