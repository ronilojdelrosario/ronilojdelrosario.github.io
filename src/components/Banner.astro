---
import background_name from '../assets/background_name.svg';
const {pageTitle} = Astro.props;
---
<div id="title-banner">
    <section id="title">
        <h1>{pageTitle}</h1>
    </section>
</div>

<style define:vars={{background_src:`url(${background_name.src})`}}>
    #title-banner {
		font-family: Inter, Roboto, 'Helvetica Neue', 'Arial Nova', 'Nimbus Sans', Arial, sans-serif;
        background-image: var(--background_src);
        background-size: cover;
        background-position: 0% 0%;
        position: relative;
        display: block;
		height: 150px;
        width: 100%;
        color: rgb(218,227,243);
		background-color:rgb(32,31,40);
    }

    #title {
        position: absolute;
        bottom: 1em;
        width: 100%;
        text-align: center;
    }

    h1 {
		font-size: 64px;
		margin-top: 0.25em;
        margin-bottom: 0;
    }

    @media screen and (max-width: 768px) {
        #title-banner {
            height:150px;
        }

        #title {
            bottom: 1.5rem;
        }

        h1 {
            font-size: 36px;
        }
    }
</style>