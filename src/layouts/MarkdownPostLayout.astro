---
import { Image } from 'astro:assets';
import PageLayout from '../layouts/PageLayout.astro';
import BottomLinks from '../components/BlogPostBottomLinks.astro';
const {frontmatter} = Astro.props;

const options : Intl.DateTimeFormatOptions = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
const datestr = new Date(frontmatter.pubDate).toLocaleDateString("en-US", options);
---
<meta charset="utf-8" />
<PageLayout pageTitle="Blog">
    <div class="container">
        <div class="banner-container">
            <Image src={frontmatter.cover} alt={frontmatter.coverAlt}/>
        </div>
        <div class="text-container">
            <div class="post-info">
                <h1><b>{frontmatter.title}</b></h1>
                <h2>{frontmatter.subtitle}</h2>
                <hr>
                <p>{datestr}</p>
                <hr>
            </div>
            <div class="content">
                <slot/>
            </div>
            <BottomLinks/>
        </div>
    </div>
</PageLayout>

<style>
    .container {
        display: block;
        position: absolute;
        width: 100%;
        color: rgba(255,255,255,0.85);
		font-family: Montserrat, Roboto, 'Helvetica Neue', 'Arial Nova', 'Nimbus Sans', Arial, sans-serif;
    }

    .banner-container{
        display: block;
        position: relative;
        width: 48em;
        aspect-ratio: 22/10;
        margin: 1em auto;
        padding: 0;
        overflow: hidden;
    }

    .text-container{
        display: block;
        position: relative;
        width: 46em;
        margin: 0 auto;
    }


    .post-info {
        padding: 0 0 0.2em;
    }

    h1, h2, .post-info {
        text-align: center;
    }

    h1{
        font-size: 32px;
        margin: 0.5em 0 0.5em;
        color: #DFDF00;
        line-height: 1.2;
    }

    h2{
        font-size: 24px;
        margin: 0.2em 0 1em;
        line-height: 1.2;
    }

    .post-info p, hr{
        padding: 0;
        margin: 0.5em 0 0;
    }

    .content {
        display:block;
        font-size: 18px;
    }

    .content :global(h2){
        color: #87CEEB;
        margin-top: 2em;
        margin-bottom: 1em;
    }

    .content :global(p){
        margin-bottom: 1em;
        line-height: 2.5;
        margin-bottom: 1.2em;
    }

    .content :global(a){
        color: #87CEEB;
    }

    .content::after {
        content: "\a\a\a\a";
        white-space: pre;
    }

    img{
        display:block;
        position: absolute;
        max-width: 100%;
        width: auto;
        height: auto;
        margin: 0;
        border-radius: 5px;
    }

    @media screen and (max-width: 768px) {
        .container {
            position: relative;
            width: 90%;
            margin: 0 auto;
            padding: 0;
        }

        h1 {
            font-size: 24px;
        }
        h2 {
            font-size: 18px;
        }
        .text-container{
            width: 100%;
        }
        .content {
            line-height:1.5;
        }
        .banner-container {
            width: 100%;
        }
    }
</style>